<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <a href="/account/update" title="Go to account management">
                Welcome <%= locals.accountData.account_firstname %>
            </a>
            <a href="/account/logout" title="Logout" class="logout-link">Logout</a>
        <% } else { %>
            <a title="Login" href="/account/login">My Account</a>
        <% } %>
    </div>
    
</header>