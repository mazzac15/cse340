<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>
    <% } else {
    res.redirect('/')
} %>

<div class="classification-container">
    <div class="required">Field is required.</div>
    <form action="/inv/add-classification" method="post" name="add-class" id="add-class">
        <label for="classification_name">Classification Name: </label>
        <div class="alphaName"><i>Name must be alphabetic characters only.</i></div>
        <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z]+">

        <button type="submit">Add Classification</button>

    </form>
</div>