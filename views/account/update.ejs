<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>
<% } %>

<div class="update-container">
    <form action="/account/update" method="post" title="Update Account" name="update-account">
        <label for="account_firstname">First Name: </label>
        <input type="text" id="account_firstname" name="account_firstname" required value="<%= locals.accountData.account_firstname %>">

        <label for="account_lastname">Last Name: </label>
        <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.accountData.account_lastname %>">
        
        <label for="account_email">Email address: </label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.accountData.account_email %>">
        
        
        <input type="hidden" name="account_id"
            value="<%= locals.accountData.account_id %>">

        <button type="submit">Update</button>
    </form>
</div>

<div class="update-password">
    <form action="/account/update-password" method="post" name="update-password">
        <h2>Update Password</h2>
        <p class="passwords"><i>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></p>
        <p>*note your original password will be changed.</p>
        <label for="account_password">Password: </label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        
        <button type="submit">Change Password</button>
    </form>
</div>

